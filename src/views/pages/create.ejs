<div class="album py-5 bg-body-tertiary">
  <div class="container">
    <h1 class="mb-4"><%- props.title %></h1>
    <form class="col-6" action="/articles/create" method="post">
      <div class="mb-3">
        <label for="titleInput" required class="form-label">Title</label>
        <input type="text" class="form-control" id="titleInput" name="title" placeholder="Article title ...">
      </div>
      <div class="mb-3">
        <label for="authorInput" required class="form-label">Author</label>
        <input type="text" class="form-control" id="authorInput" name="author" placeholder="Author ...">
      </div>
      <div class="mb-3">
        <label for="summaryInput" required class="form-label">Summary</label>
        <input type="text" class="form-control" id="summaryInput" name="summary" placeholder="Article description ...">
      </div>
      <div class="mb-3">
        <label for="contentTextArea" required class="form-label">Content</label>
        <textarea class="form-control" id="contentTextArea" name="content" rows="3"></textarea>
      </div>
      <div class="d-flex flex-row justify-content-end">
        <button class="btn btn-primary md-4 m-2" type="submit">Save Post</button>
        <button class="btn btn-danger md-4 m-2" type="reset">Cancel</button>
      </div>
    </form>
  </div>
</div>