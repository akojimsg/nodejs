<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Nodejs Sandbox</h1>
      <p class="lead text-body-secondary">This a nodejs-Express crash course, created to showcase some basic
        features in working with nodejs like using embedded javascript template engine for SSR, building MVC
        application with Mongodb, managing static contents and much more.</p>
      <p>
        <a href="/articles" class="btn btn-primary my-2">View Articles</a>
        <a href="/articles/create" class="btn btn-warning my-2 text-white">Create new Article</a>
      </p>
    </div>
  </div>
</section>

<div class="album py-5 bg-body-tertiary">
  <div class="container">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% props.articles.forEach((article)=> { %>
        <div class="col">
          <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg"
              role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
              <title><%- article.title %></title>
              <rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em"><%-
                  article.title %></text>
            </svg>
            <div class="card-body">
              <p class="card-text"><%- article.content %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/articles/details/<%= article._id.toString() %>"
                    class="btn btn-sm btn-outline-secondary">View</a>
                  <a href="/articles/edit/<%= article._id.toString() %>"
                    class="btn btn-sm btn-outline-secondary">Edit</a>
                </div>
                <small class="text-body-secondary">9 mins</small>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
    </div>

  </div>
</div>