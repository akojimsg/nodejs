{
  "name": "nodejs-course",
  "version": "1.0.0",
  "description": "Crash course for nodejs",
  "main": "src/server.ts",
  "dependencies": {
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "express": "^4.19.1",
    "lodash": "^4.17.21",
    "mongoose": "^8.2.3",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3",
    "undici-types": "^5.26.5"
  },
  "scripts": {
    "test": "test",
    "start": "ts-node src/server.ts",
    "start:dev": "nodemon src/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/akojimsg/nodejs-training.git"
  },
  "author": "EI Akoji",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/akojimsg/nodejs-training/issues"
  },
  "homepage": "https://github.com/akojimsg/nodejs-training#readme",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "jest": "^29.7.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register src/server.ts",
    "ext": "ts"
  }
